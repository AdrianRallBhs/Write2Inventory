{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "composite": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "lib": [
            "ESNext"
        ]
    },
    "references": [
        {
            "path": "./tsconfig.build.json"
        }
    ],
     "exclude": [
        "node_modules"
    ]
}